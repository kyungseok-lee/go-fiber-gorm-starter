# Environment
ENV=local

# Server
PORT=8080

# Database
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASS=password
DB_NAME=fiber_gorm_starter
DB_SSL_MODE=disable

# Database Connection Pool
DB_MAX_OPEN=25
DB_MAX_IDLE=10
DB_MAX_LIFETIME=300

# API Security (optional)
API_KEY=your-api-key-here

# Logging
LOG_LEVEL=info

# Metrics
METRICS_ENABLED=true

# Profiling (for debugging)
PPROF_ENABLED=false